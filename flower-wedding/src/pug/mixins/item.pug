mixin accordion (imgSrc, addressItem, dateItem)
    .accordion-body_item__inner    
        .row
            .col-sm-12.col-lg-6
                .accordion-body_item__img(style="background-image: url(" + imgSrc + ")")
            .col-sm-12.col-lg-6
                .accordion-body_item__content
                    h3.heading-3.title When and Where
                    .info
                        .item.item-location
                            <i class="fas fa-2x fa-map-marker-alt"></i>
                            p!= addressItem
                        .item.item-clock
                            <i class="far fa-2x fa-clock"></i>
                            p!= dateItem
                        .item.bold Keep it classy
                    +link('View on Map', 'javascript:void(0)').btn.btn-big.btn-outline-dark.btn-view

mixin event-info (title)
    .event-info
        h4.heading-4.bold!= title
        if block
            block
        else
            !=text

mixin card (imgSrc, title, description)
    .card
        +link('post', 'javascript:void(0)')
            .card-image(style="background-image: url(" + imgSrc + ")")
        .card-body
            +link('head-post', 'javascript:void(0)')
                h5.card-title!= title
            .tag
                +link('tag', 'javascript:void(0)','Love')
                +link('tag', 'javascript:void(0)', 'Wedding')
            p!= description

mixin card-category (imgSrc, alt, title, author)    
    .card-category_item
        +img(alt, imgSrc).img-64
        .meta-data
            +link('post-title', 'javascript:void(0)', title)
            p!= "By"+ " " + author